BoxLayoutExample:

<BoxLayoutExample>:
    orientation: "vertical"
    Button:
        text: "A"
        size_hint: .2, 1
        pos_hint: {"center_x":.5}
    Button:
        text: "B"
        size_hint: 1, 1
        on_press: root.on_button_click()
    BoxLayout:
        Button:
            text: "Map"
            size_hint: 1, .3
        Button:
            text: "Home"
            size_hint: 1, .3
        Button:
            text: "Stats"
            size_hint: 1, .3
        Button:
            text: "Settings"
            size_hint: .5, .3

<MainWidget>:
    Button:
        text: "Hello"
        size: "100dp", "100dp"
        pos: "100dp", "300dp"
    Label:
        text: "Hi"
        size: "200dp", "200dp"
        pos: "100dp", "400dp"
        color: 1, 0, 0, 1




